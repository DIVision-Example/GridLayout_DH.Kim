<Window x:Class="Office.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Office"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" SizeChanged="Window_SizeChanged" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Rectangle Name="Office1" Background="Aqua" Grid.Row="0"/>
        <Rectangle Name="Office2" Background="red" Grid.Row="1"/>
        <Rectangle Name="Office3" Background="Green" Grid.Row="2"/>

        <DataGrid Name="OfficeList" Grid.Column="1" Grid.RowSpan="3" ItemsSource="{Binding Rooms}" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}" Width="130" />
                <DataGridTextColumn Header="Width" Binding="{Binding Path=Width}" Width="130" />
                <DataGridTextColumn Header="Height" Binding="{Binding Path=Height}" Width="180" />
                <DataGridTextColumn Header="Height" Binding="{Binding Path=Area}" Width="180" />
                <DataGridTextColumn Header="Height" Binding="{Binding Path=Tiles}" Width="180" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
